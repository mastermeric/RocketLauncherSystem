
@{
    ViewData["Title"] = "SignalRTest";
}

<h1>RocketWatcher - TEST Sistemine Hoşgeldiniz</h1>
<h2 id="txtStatuMsg" style="color:green"></h2>

<div class="container">  

    <div class="row">&nbsp;</div>
    
    <div class="row">
        <div class="col-2">Rocket ID</div>
        <div class="col-4">
            <input type="text" id="txtUser" style="width:100%;"/>
         </div>
    </div>       

    <div class="row">
        <div class="col-2">Launch Note</div>
        <div class="col-4">            
            <input type="text" id="txtMessage" style="width:100%;"/>
        </div>
        <div class="col-6">
            <input type="button" id="btnSendMessage" value="Launh Rocket" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-12">
        <ul id="messagesList"></ul>
    </div>
</div>

@section Scripts{
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/Notification.js"></script>
}